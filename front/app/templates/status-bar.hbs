    <nav class="top-navbar">
        <a class="antenna-button dropdown-toggle ember-link" data-toggle="dropdown">
            <span class="dradis-logo">
                <img src="/public/assets/images/dradis2_logo.png" />
            </span>
            <span class="antenna-name">
                {{!--{{currentStudio.name}} --}}
                KnarfWorld
                <b class="caret"></b>
            </span>
        </a>
        <ul class="dropdown-menu antenna-menu" role="menu">
            {{#each sortedStudios as |studio|}}
                <li>
                    {{#link-to 'studio' studio.id}}
                        {{little-emblem type="studio-emblem" slug=studio.slug}}
                        {{studio.name}}
                    {{/link-to}}
                </li>
            {{/each}}
            <li class="divider"></li>
            <li>
                <a class="ember-link" {{action "openModal" "maintenance-dialog"}}>
