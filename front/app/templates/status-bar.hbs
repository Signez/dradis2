        </div>
        <div class="top-right-zone">
            {{#if status.serverTime}}
                <ul class="nav navbar-nav pull-right">
                    {{#if status.liquidsoapOnline}}
                        <li>
                            <a class="ember-link">
                                <i class="fa fa-fw fa-bolt"></i>
                                <strong class="ellipsised">{{ status.liveMetadata.artist }}</strong> −
                                <em class="ellipsised">{{ status.liveMetadata.title }}</em>
                            </a>
                        </li>
                        <li class="navbar-text" style="margin-left: 0;">
                            {{#if status.permanentSelected}}
                                <span class="label label-default big-label">
                                    <i class="fa fa-fw fa-music"></i> Perm.
                                </span>
                            {{else}}
                                {{#if currentStudioSelected}}
                                    <span class="label label-success big-label">
                                        {{ status.humanizedSelected }}
                                    </span>
                                {{else}}
                                    <span class="label label-danger big-label">
                                        <i class="fa fa-fw fa-warning"></i>
                                        {{ status.humanizedSelected }}
                                    </span>
                                {{/if}}
                            {{/if}}
                        </li>
                    {{/if}}
                    <li class="navbar-text" style="margin-left: 0; margin-right: 0;">
                        {{ status.listeners }} aud.
                    </li>
                    <li class="navbar-text">
                        {{ status.humanTime }}
                    </li>
                </ul>
            {{else}}
                <p class="navbar-text pull-right">
                    <i class="fa fa-fw fa-spinner"></i> En attente de la connexion…
                </p>
            {{/if}}
        </div>
